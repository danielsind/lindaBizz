{{#partial "content"}}
    <div class="pages">
        <h2 class="text-center">Sales</h2>
    {{#if sales}}
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Product Name</th>
                        <th>Customer Name</th>
                        <th>Payment Status</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                    </tr>
                    </thead>
                    {{#each sales }}
                        <tbody>
                        <tr>
                            <td>{{id}}</td>
                            <td>{{ productname}}</td>
                            <td>{{ customername }}</td>
                            <td>{{paymentstatus}}</td>
                            <td> {{quantity}}</td>
                            <td>{{unitprice}}</td>
                        </tr>
                        </tbody>
                    {{/each}}
                </table>
            </div>
            <a href="/sales/form"  class="otherbuttons"> <span style="color:green;">Record Sales</span>  </a>
    {{else}}
            <h2>NO SAles Man!! Quit Business</h2>

        </div>
    {{/if}}
{{/partial}}
{{> layout.hbs}}